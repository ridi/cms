{
  "name": "ridibooks/cms",
  "description": "Ridibooks CMS Server Aplication",
  "type": "project",
  "license": "MIT",
  "require": {
    "illuminate/database": "^5.2",
    "jguyomard/silex-capsule-eloquent": "^2.0",
    "moriony/silex-sentry-provider": "~2.0.0",
    "ridibooks/cms-sdk": "~2.3.4",
    "sentry/sentry": "^1.6",
    "silex/silex": "^2.0",
    "twig/twig": "^2.0.0",
    "vlucas/phpdotenv": "^2.4",
    "guzzlehttp/guzzle": "^6.3",
    "monolog/monolog": "^1.23",
    "thenetworg/oauth2-azure": "dev-master#d7c25245b1d185a01b497318a094bfe128de786c"
  },
  "require-dev": {
    "robmorgan/phinx": "^0.9.2",
    "phpunit/phpunit": "^6.5"
  },
  "minimum-stability": "RC",
  "prefer-stable" : true,
  "autoload": {
    "psr-4": {
      "Ridibooks\\Cms\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ridibooks\\Cms\\Tests\\": "tests/unit"
    }
  },
  "scripts": {
    "test": "phpunit",
    "clear": "rm -rf vendor"
  }
}
